{
  "Serilog": {
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Async",  
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "restrictedToMinimumLevel": "Debug",
                "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{Properties:j}]: {Message:j}{NewLine}{Exception}"
              }
            },
            {
              "Name": "File",
              "Args": {
                "restrictedToMinimumLevel": "Debug",
                "path": "Logs/kiosk-api-.log",
                "rollingInterval": "Day",
                "fileSizeLimitBytes": 102400,
                "rollOnFileSizeLimit": true,
                "retainedFileCountLimit": 30,
                "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
              }
            },
            {
              "Name": "Seq",
              "Args": { "serverUrl": "http://xyz:5341" }
            }
          ]
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithExceptionDetails" ],
    "Properties": {
      "ApplicationName": "Kiosk API2"
    }
  },
  "AllowedHosts": "*",
  "DatabaseId": "CachedData",
  "WeatherApi": {
    "weather_req_url": "https://api.openweathermap.org/data/3.0/onecall?appid={0}&lat={1}&lon={2}&lang={3}&units={4}&exclude={5}",
    "weather_api_token": "<Open Weather Map API Token>",
    "weather_lang": "en",
    "weather_unit": "imperial",
    "weather_exclude_list": "minutely,hourly",
    "weather_data_cache_time_minutes": -3
  },
  "SolarApi": {
    "base_req_url": "https://monitoringapi.solaredge.com/site/{0}/overview?api_key={1}",
    "solar_site_id": "<Solar Edge SiteId>",
    "solar_api_token": "<SolarEdge API Token>",
    "solar_data_cache_time_minutes": -5
  },
  "SolarMaxProduction": 10010.00,
  "BodyParts": ["Head", "Outer Torso", "Inner Torso", "Legs", "Hands"],
